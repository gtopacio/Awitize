<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Awitize" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_01</item>
        <item name="colorPrimaryVariant">@color/dark_02</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_01</item>
        <item name="colorSecondaryVariant">@color/dark_02</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/KollektifStyle</item>
    </style>

    <style name="KollektifStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/kollektif_normal</item>
    </style>
</resources>